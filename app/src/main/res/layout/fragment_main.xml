<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_edge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edge (n >= 1, n^2): 1, 4, 9, 16, 25, ..."
                android:text="9" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_min_sub_given"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimum sub given (n >= 0)"
                android:text="3" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_min_total_given"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimum total given (n >= 0)"
                android:text="27" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_sudoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sudoku" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scan" />

    </LinearLayout>

</FrameLayout>