<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="edge"
            android:text="9" />

        <EditText
            android:id="@+id/et_min_sub_given"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="min_sub_given"
            android:text="4" />

        <EditText
            android:id="@+id/et_min_total_given"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="min_total_given"
            android:text="55" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_gen_puzzle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="gen_puzzle" />

            <Button
                android:id="@+id/btn_resolve_puzzle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="resolve_puzzle" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="notification" />
        </ScrollView>
    </FrameLayout>

</LinearLayout>
